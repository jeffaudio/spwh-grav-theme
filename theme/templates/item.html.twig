{% extends 'partials/base.html.twig' %}

{% block content %}
	<div class="row">
		<div class="small-12 columns">
			<header>
				<h1 class="title"><a href="{{ page.url }}">{{ page.title }}</a></h1>
				<h3 class="subheading">
					{% if page.header.author %}By {{ page.header.author }} | {% endif %}
					{{ page.date|date("M. d, Y") }}
				</h3>
			</header>

			<img class="feature-image" src="{{ page.media.images|first.url }}" />
		</div>
	</div>

	<div class="row">
		<main class="blog">
			<article class="post">
				<section class="content">
					{{ page.content }}
				</section>
	
				<footer>
					{% if page.taxonomy.category %}
						<p>Categories: {% for category in page.taxonomy.category %}<a href="{{ page.parent.url }}/category:{{ category }}" rel="category">{{ category }}</a>{% if not loop.last %}, {% endif %}{% endfor %}</p>
					{% endif %}
					<div class="social">
						<div class="social-link facebook"><a href="#"></a></div>
						<div class="social-link twitter"><a href="#"></a></div>
						<div class="social-link tumblr"><a href="#"></a></div>
					</div>
				</footer>

				{% if page.taxonomy.tag %}
					<ul class="tags">
						{% for tag in page.taxonomy.tag %}
							<li class="tag"><a href="{{ page.parent.url }}/tag:{{ tag }}" rel="tag">{{ tag }}</a></li>
						{% endfor %}
					</ul>
				{% endif %}
			</article>

			{% if config.plugins.relatedpages.enabled and related_pages|length > 0 %}
    		{% include 'partials/related.html.twig' %}
			{% endif %}
		</main>

		<section class="sidebar">
			{% include 'partials/sidebar.html.twig' %}
		</section>
	</div>

	{% include 'partials/footer.html.twig' %}
{% endblock content %}
