{% embed 'partials/base.html.twig' %}

	{% set collection = page.collection() %}
	{% set base_url = page.url %}
	{% set feed_url = base_url %}

	{% if base_url == '/' %}
	{% set base_url = '' %}
	{% endif %}

	{% if base_url == base_url_relative %}
	{% set feed_url = base_url~'/'~page.slug %}
	{% endif  %}

	{% block content %}
		<div class="row">
			<main class="blog">
				{% if uri.params and not uri.param('page') %}
					{% if uri.param('tag') %} {% set filterText = uri.param('tag') %} {% endif %}
					{% if uri.param('category') %} {% set filterText = uri.param('category') %} {% endif %}
					<h1 class="collection-title">{{ filterText|title }} {{ 'Post'|pluralize(page.children.count()) }}</h1>

					{{ page.content }}

					{% for child in page.children() %}
						{% if child.children().count() > 0 %}
								{% include 'partials/series.html.twig' with {'series': child} %}
						{% else %}
							{% include 'partials/summary.html.twig' with {'page': child} %}
						{% endif %}
					{% endfor %}
				{% else %}
					{% if page.content %}
						<h1 class="collection-title">{{ page.title }}</h1>
						{{ page.content }}
					{% endif %}

					{% for child in collection %}
						{% include 'partials/summary.html.twig' with {'page':child, 'truncate':true} %}
					{% endfor %}

					{% if config.plugins.pagination.enabled and collection.params.pagination %}
						{% include 'partials/pagination.html.twig' with {'pagination':collection.params.pagination} %}
					{% endif %}
				{% endif %}
			</main>

			<section class="sidebar">
				{% include 'partials/sidebar.html.twig' %}
			</section>
		</div>

		{% include 'partials/footer.html.twig' %}
	{% endblock content %}
{% endembed %}