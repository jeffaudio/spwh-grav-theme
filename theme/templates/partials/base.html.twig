<!DOCTYPE html>
<html lang="en">
<head>
	{% block head %}
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

	<title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
	
	{% if header.description %}
		<meta name="description" content="{{ header.description }}">
	{% else %}
		<meta name="description" content="{{ site.description }}">
	{% endif %}
	
	<meta name="keywords" content="dogs, agility, dog training, eskie, american eskimo, dog agility, diy, home renovation" />

	<!-- 
	<link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
	<link rel="canonical" href="{{ page.url(true, true) }}" />
	-->
	
	<link href="{{ theme_url }}/css/style.css" type="text/css" rel="stylesheet" />

	{% endblock head %}
</head>

<body>
{% include 'partials/header.html.twig' %}

{% block content %}
{% endblock %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.2/js/foundation.min.js"></script>
<!-- <script async src=http://use.edgefonts.net/source-sans-pro;merriweather.js></script> -->
<script>
	(function() {
		$(document).foundation();

		$(document).ready(function() {
			var input = $(".search input[type='text']");
			input.on('keypress', function(evt) {
				if (evt.which == 13) {
					evt.preventDefault();
					search(input.val());
				}
			});

			var btn = $(".search .button");
			btn.click(function() {
				evt.preventDefault();
				search(input.val());
			});
		});

		function search(text) {
			var url = "{{ base_url }}{{ config.plugins.simplesearch.route }}/query";
			window.location.href = url + '{{ config.system.param_sep }}' + text;
		}
	})();
</script>
</body>
</html>
